@{
    ViewBag.Title = "Green Bottles - Lab3";
}

<div class="content">
    <form method="post" action="/Home/Count">
        <table>
            <tr>
                <td>
                    Enter the number of bottles between 50 and 100:
                    <input type="number" min="50" max="100" name="bottles" />
                </td>
                <td>
                    <button type="submit" name="Count" value="Count">Count!</button>
                </td>
            </tr>
        </table>
    </form>
</div>


